@model List<DevFolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Projeler Sayfası</h2>
<br>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Proje Başlığı</th>
        <th>Proje Oluşturulma Tarihi</th>
        <th>Proje Kategorisi</th>
        <th>Proje Kapak Resmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.ProjectID</td>
    <td>@item.Title</td>
    <td>@item.CreatedDate</td>   
    <td>@item.ProjectCategory</td>
    <td>@item.CoverImageUrl</td>
    <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
</tr>
    }

