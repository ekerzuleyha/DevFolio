@model DevFolio.Models.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Bilgisi Güncelle</h2>
<br />
<form method="post">
    <label>Hakkımda Id</label>
    @Html.TextBoxFor(x => x.AboutID, new { @class = "form-control", @readonly = "true" })
    <br />
    <label>Hakkımda</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Hakkımda Bilgisini Güncelle</button>
</form>
