
@{
    ViewBag.Title = "CreateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Yetenek Girişi</h2>
<!--form method post şu anlama gelir : bu sayfadaki işlemler bu sayfada bir post işlemi yapıldığında çalışacak,sayfada post işlemi genellikle butona tıklanınca yapılır.bu sayfanın metotları içinde post olan hangisiyse ona gidecek -->

<form method="post" >
    <label>Yetenek Adı</label>
    <!--inputlar yazıldı ama bu inputların kim olduğu belli değil bu yüzden name ile belirtiyoruz.-->
    <input type="text" class="form-control" name="SkillTitle"/>
    <br />
    <label>Yetenek Değeri</label>
    <input type="text" class="form-control" name="SkillValue"/>
    <br />
    <button class="btn btn-info">Yeteneği Kaydet</button>

</form>

