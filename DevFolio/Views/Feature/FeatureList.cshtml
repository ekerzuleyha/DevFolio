@model List<DevFolio.Models.TblFeature>
@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellikler Sayfası</h2>

<div class="alert alert-primary">Özellik kısmına yalnız <b>1</b> veri girişi yapınız. </div>
<br />

<table class="table table-bordered">
    <tr>
        <th>Özellik Id</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureID</td>
            <td>@item.HeaderTitle</td>
            <td>@item.HeaderDescription</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-success">Güncelle</a></td>
        </tr>

    }


</table>

<a href="/Feature/CreateFeature/" class="btn btn-info">Yeni Özellik Ekle</a>

