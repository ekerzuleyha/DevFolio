@model DevFolio.Models.TblService 
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>
<br />
<form method="post">
    <label>Hizmet Id</label>
    @Html.TextBoxFor(x => x.ServiceID, new { @class = "form-control", @readonly = "true" })
    <br />
    <label>Hizmet Ad</label>
    @Html.TextBoxFor(x => x.ServiceTitle, new { @class = "form-control"})
    <br />
    <label>Hizmet Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control"})
    <br />
    <label>Kapak Resmi</label>
    @Html.TextBoxFor(x => x.ServiceImageUrl, new { @class = "form-control"})
    <br />
    <button class="btn btn-info" >Hizmeti Güncelle</button>
</form>

