@model DevFolio.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>

<form method="post">
    <label>Kategori Id</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control", @readonly = "true" })
    <br />
    <label>Kategori Ad</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control"})
    <br />
    <button class="btn btn-info" >Kategori Güncelle</button>
</form>

