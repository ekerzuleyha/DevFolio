@model DevFolio.Models.TblContact
@{
    ViewBag.Title = "ReadMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Ayrıntıları</h2>
<div class="container">
    <br />
    <label>Mesaj Id</label>
    @Html.TextBoxFor(x => x.ContactID, new { @class = "form-control", @readonly = "true" })
    <br />
    <label>Mesajı Gönderen</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Mesaj Konusu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    <label>Mesaj</label>
    @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Mesaj Gönderilme Tarihi</label>

    <input type="datetime" class="form-control" name="SendMessageDate" value="@(((DateTime)Model.SendMessageDate).ToString("dd.MM.yyyy"))" />

    @*<td>@(((DateTime)Model.SendMessageDate).ToString("dd.MM.yyyy"))</td>

        @Html.TextBoxFor(x => x.SendMessageDate, new { @class = "form-control" })*@
    <br />

</div>

<a href="/Contact/MessageList" class="btn btn-info" >Mesajlara Dön</a>




