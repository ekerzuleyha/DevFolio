@model List<DevFolio.Models.TblContact>
@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        @*<th>Email</th>*@
        <th>Konu</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>

   @foreach (var item in Model)
   {
       string okunduBilgisi = "";
       string renk = "";

       if (item.IsRead==true)
       {
           okunduBilgisi = "Okundu";
           renk = "alert-success";
       }
       else
       {
           okunduBilgisi = "Okunmadı";
           renk = "alert-danger";
       }
<tr> 
    <td>@item.ContactID</td>
    <td>@item.NameSurname</td>
    @*<td>@item.Email</td>*@
    <td>@item.Subject</td>
    <td>@(((DateTime)item.SendMessageDate).ToString("dd.MM.yyyy"))</td>
    
    <td><span class="@renk" >@okunduBilgisi</span></td>
    <td><a href="/Contact/DeleteMessage/@item.ContactID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Contact/ReadMessage/@item.ContactID" class="btn btn-success">Mesajı Aç</a></td>
</tr>
   }
</table>

