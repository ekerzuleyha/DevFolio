@model DevFolio.Models.TblAdmin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Admin Güncelleme Sayfası</h2>

<form method="post">
    <label>Admin Id</label>
    @Html.TextBoxFor(x => x.AdminID, new { @class = "form-control", @readonly = "true" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    <label>Admin Şifre</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control"})
    <br />
    <button class="btn btn-info" >Admin Güncelle</button>
</form>

