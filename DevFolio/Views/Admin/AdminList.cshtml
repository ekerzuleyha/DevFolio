@model List<DevFolio.Models.TblAdmin>
@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Admin Sayfası</h2>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Şifre</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdminID</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            <td><a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-danger" >Sil</a></td>
            <td><a href="/Admin/UpdateAdmin/@item.AdminID" class="btn  btn-success" >Güncelle</a></td>
        </tr>
    }

</table>
<br />

<a href="/Admin/AddAdmin/" class="btn btn-info" >Yeni Admin Ekle</a>

